- if article.read_by?(current_user)
  = link_to_remote "Mark unread", :url => unread_article_path(article, :user_id => current_user.id), :method => :post, :update => item_controls_id(article)
- else
  = link_to_remote "Mark read", :url => read_article_path(article, :user_id => current_user.id), :method => :post, :update => item_controls_id(article)